<section class="contact">
    <div class="ContactTop text-center pb-4">
        <div class="container">
            <h1>CONTACT </h1>
            <h5 class="mt-3 pb-5">HOME /CONTACT</h5>
        </div>
    </div>
    <div class="container mt-4">
        <div class="map mt-4">
            <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d470032.56401117734!2d71.9557201550594!3d23.019020340235283!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x395e848aba5bd449%3A0x4fcedd11614f6516!2sAhmedabad%2C%20Gujarat!5e0!3m2!1sen!2sin!4v1735047508893!5m2!1sen!2sin"
                width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </div>
    <div class="container pt-3 mt-5 text-start">
        <div class="row g-1 ">
            <div class="col-md-4 ps-4  pt-4 bg-light">
                <h2 class="mb-4">Contact Info</h2>
                <p><strong>Phone:</strong><br>+012 345 678 102<br>+012 345 678 203</p>
                <p><strong>Email:</strong><br>email@here.com<br>your@email.here</p>
                <p><strong>Address:</strong><br>Address goes here,<br>street, Crossroad 123.</p>
            </div>
            <div class="col-md-8 bg-light p-4">
                <h2 class="mb-4">Get In Touch</h2>
                <form>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="firstName" class="form-label">First Name</label>
                            <input type="text" class="form-control bg-transparent" id="firstName"
                                placeholder="First Name">
                        </div>

                        <div class="col-md-6">
                            <label for="lastName" class="form-label">Last Name</label>
                            <input type="text" class="form-control" id="lastName" placeholder="Last Name">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="subject" class="form-label">Subject</label>
                        <input type="text" class="form-control" id="subject" placeholder="Subject">
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Message</label>
                        <textarea class="form-control" id="message" rows="4" placeholder="Message"></textarea>
                    </div>
                    <button type="submit" class="btn btn-orange text-white px-4">SEND MESSAGE</button>
                </form>
            </div>
        </div>
    </div>
</section>